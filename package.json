{
    "name": "floyd-cli-root",
    "version": "1.3.0",
    "description": "A cli for automating and simplifying common tasks",
    "main": "./bin/index.js",
    "bin": {
        "flo": "./bin/index.js"
    },
    "scripts": {
        "prepare": "npm run build",
        "build": "nx build flo-cli",
        "build:all": "nx run-many --target=build",
        "test:all": "nx run-many --target=test",
        "lint:all": "nx run-many --target=lint --verbose",
        "dev": "nx build flo-cli --watch"
    },
    "author": "Floyd Haremsa",
    "license": "ISC",
    "dependencies": {
        "@js-joda/core": "^5.5.3",
        "axios": "^1.4.0",
        "colors": "^1.4.0",
        "commander": "^10.0.0",
        "dotenv": "^16.3.1",
        "prompts": "^2.4.2",
        "tslib": "^2.3.0",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@nx/esbuild": "^16.5.5",
        "@nx/eslint-plugin": "16.5.5",
        "@nx/jest": "16.5.5",
        "@nx/js": "^16.5.5",
        "@nx/linter": "16.5.5",
        "@nx/node": "^16.5.5",
        "@nx/vite": "16.5.5",
        "@total-typescript/ts-reset": "^0.4.2",
        "@types/jest": "^29.4.0",
        "@types/node": "^20.4.4",
        "@types/prompts": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.60.1",
        "@vitest/coverage-c8": "~0.32.0",
        "@vitest/ui": "~0.33.0",
        "esbuild": "^0.17.19",
        "eslint": "~8.15.0",
        "eslint-config-prettier": "8.8.0",
        "jest": "^29.4.1",
        "jest-environment-node": "^29.4.1",
        "nx": "16.5.5",
        "prettier": "^3.0.0",
        "ts-jest": "^29.1.0",
        "ts-node": "10.9.1",
        "typescript": "^5.0.3",
        "vite": "~4.3.9",
        "vite-plugin-dts": "~2.3.0",
        "vite-tsconfig-paths": "~4.2.0",
        "vitest": "~0.32.0"
    },
    "nx": {
        "targets": {
            "build": {
                "outputs": [
                    "{projectRoot}/bin"
                ]
            }
        }
    }
}
