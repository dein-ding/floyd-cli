{
    "name": "floyd-cli",
    "version": "1.0.0",
    "description": "A cli for automating and simplifying common tasks",
    "main": "./bin/index.js",
    "bin": {
        "flo": "./bin/index.js"
    },
    "scripts": {
        "prepare": "npm run build",
        "build": "esbuild ./src/main.ts --outfile=./bin/index.js --bundle --platform=node --target=node16",
        "dev": "npm run build -- --watch",
        "format": "prettier --write ."
    },
    "author": "Floyd Haremsa",
    "license": "ISC",
    "dependencies": {
        "colors": "^1.4.0",
        "commander": "^10.0.0",
        "prompts": "^2.4.2"
    },
    "devDependencies": {
        "@types/node": "^18.15.11",
        "@types/prompts": "^2.4.4",
        "esbuild": "^0.17.14",
        "prettier": "^2.8.7",
        "typescript": "^5.0.3"
    }
}
